<!DOCTYPE html>
<html lang="en">

  {% include "head.njk" %}

  <body class="nomad-base">

		<div class="nomad-menu">
			{% for page in nomadPages %}
				<a href="/{{ page.slug }}">{{ page.title }}</a>
			{% endfor %}
		</div>

    {% block content %}
      <div data-template="{{ templateClass }}">
        {{ content | safe }}
      </div>
    {% endblock %}
  
    <script src="{{ '/' | url }}js/main.js"></script>
  </body>

</html>
